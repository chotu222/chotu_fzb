fi

dowork {
   cd ..
   cd fzb
   mkdir MERA-INF
   mkdir chotu
   cd ..
   cd chotu-linux
   cp -R MERA-INF ../fzb/MERA-INF
   cp -R chotu ../fzb/chotu
}
